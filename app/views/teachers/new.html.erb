<%= form_with model: @teacher, url: sign_in_path do |form| %>
  <div>
  <%= form.label :email %>
  <%= form.email_field :email, required: true %>
  </div>
  <div>
  <%= form.label :password %>
  <%= form.password_field :password, required: true %>
  </div>
  <div>
  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation, required: true %>
  </div>
  <%= form.submit "Sign Up" %>
  <%= render partial: "shared/errors", locals: { object: form.object } %>
<% end %>